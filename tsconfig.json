{
  "compilerOptions": {
    /* Target Output */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // Optimal untuk library modern
    "lib": ["ESNext", "DOM", "DOM.Iterable"], // Menambahkan tipe Response & ReadableStream
    
    /* Output Settings */
    "outDir": "./dist",
    "declaration": true, // Menghasilkan file .d.ts untuk user TypeScript
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    
    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Interop & Agnostic Tools */
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}